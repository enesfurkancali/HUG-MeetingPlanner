
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<form class="form-signin" id='form1' action="@Url.Action("Create","Meeting")" method="@FormMethod.Post">
    <div class="text-center mb-4">
        <br /><br />
        <a href="@Url.Action("Homepage","Home")"><img class="mb-4" src="~/Content/Images/logoo.png" alt="logo.png" width="200" height="200"></a><br /><br /><br />
        <div class="form-signin"style="background:  #e8eaf6;
        width: 800px;
        height: 370px;
        border: 2px solid #f5f5f5;
        border-radius: 20px;">

            <div>
                <h1 class="h3 mb-3 font-weight-normal">Toplantı Detayları</h1>
                <h4 style="color: #9e9e9e">Adım 1</h4>
            </div>
            <div class="text-danger">
        @ViewBag.Message
    </div>
            <br />
             <div class="form-group">
                <input type="hidden" id="davetciad" class="form-control" name="davetciad" value="@HttpContext.Current.User.Identity.Name" required >
            </div>

            <div class="form-group">
                <input type="text" id="toplanti" class="form-control" name="topad" maxlength="30" placeholder="Toplantı Başlığı" required autofocus>
            </div>


            <div class="form-group">
                <input list="platform" class="form-control" placeholder="Platform" name="platform" maxlength="20" required>
                <datalist id="platform" name="platform">
                    <option value="Telefon">
                    <option value="Skype">
                    <option value="Zoom">
                </datalist>
            </div>

            <div class="form-group">
                <input type="text" id="notlar" name="notlar" class="form-control" placeholder="Notlar(Opsiyonel)" maxlength="150" >
            </div>

            <button class="btn btn-lg btn-primary btn-block" style="background:#717ED4" type="submit" >İleri</button> <br />
        </div>
    </div>
    <p class="mt-5 mb-3 text-muted text-center">&copy; HUG</p>
</form>

