
@{
    ViewBag.Title = "Invite";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<form class="form-signin" id='form1' action="@Url.Action("Invite","Meeting")" method="@FormMethod.Post">
    <div class="text-center mb-4">
        <br /><br />
        <a href="@Url.Action("Homepage","Home")"><img class="mb-4" src="~/Content/Images/logoo.png" alt="logo.png" width="200" height="200"></a><br /><br /><br />
        <div class="form-signin" style="background:  #e8eaf6;
        width: 800px;
        border: 2px solid #f5f5f5;
        border-radius: 20px;">


            <div>
                <h1 class="h3 mb-3 font-weight-normal">Davet Listesi</h1>
                <h4 style="color: #9e9e9e">Adım 2</h4>
            </div>
            <br />


            <input type="number" class="form-control" pattern="\d" title="Sadece sayısal değer girebilirsiniz." onkeyup="addFields()" id="davetli" name="davetli" placeholder="Katılımcı Sayısı" required>
            <br />

           
            <div id="container" />
        </div>

        <button class="btn btn-primary btn-lg" style="position:absolute; right:10px; background:#717ED4; " type="submit">&#160;&#160;&#160;İleri &raquo;&#160;&#160;&#160;</button>
    </div>
    <p class="mt-5 mb-3 text-muted text-center">&copy; HUG</p>
</form>





<script type='text/javascript'>
    function addFields() {
        // Number of inputs to create
        var number = document.getElementById("davetli").value;
        // Container <div> where dynamic content will be placed
        var container = document.getElementById("container");
        // Clear previous contents of the container
        while (container.hasChildNodes()) {
            container.removeChild(container.lastChild);
        }

        for (i = 0; i < number; i++) {
            // Append a node with a random text
            container.appendChild(document.createTextNode("Davetli " + (i + 1)));
            // Create an <input> element, set its type and name attributes
            var input = document.createElement("input");
            input.classList.add("form-control");
            input.type = "email";
            input.placeholder = "E-Posta";
            input.name = "davetli" + (i+1);
            input.id = "davetli" + (i+1);
            input.required="true";
            container.appendChild(input);
            // Append a line break
            container.appendChild(document.createElement("br"));
            if (i > 3)
                break;
        }
    }
</script>

